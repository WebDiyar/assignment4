                </form>
                </li>
                <li class="nav-item">
                  <form method="GET" action="/mockapi">
                    <button type="submit">
                      <%= __("MockApi") %>
                    </button>
                  </form>
                </li>
                <li class="nav-item ">
                  <form method="GET" action="/quiz">
                    <button type="submit">
                      <%= __("bonuses") %>
                    </button>
                  </form>
                </li>
            </ul>

            <form class="form-inline my-2 my-lg-0" style="margin-left: 35%;">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit" formaction="/"><%= __("Log Out") %></button>
            </form>
        </div>
      </div>
    </nav>

