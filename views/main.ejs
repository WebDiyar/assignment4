    <div class="itemBlocks">
      <% items.forEach(item => { %>
        <div class="itemBlock">
          <h2>Name: <%= item.names.en %></h2>
          <p>Description: <%= item.descriptions.en %></p>
          <div class="carousel">
            <% item.pictures.slice(0, 3).forEach((picture, index) => { %>
              <img src="<%= picture %>" alt="<%= item.names.en %>" class="carouselImage" />
            <% }); %>
          </div>
        </div>
      <% }); %>

    </div>
     <!-- Footer -->
     <div class="footer">
       <div class="container">
         <span class="text-muted">Created by Diyar Amangeldi</span> <br>
         <span class="text-muted">Group SE-2202</span>
       </div>
     </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const carousel = document.querySelector(".carousel");
        const images = carousel ? carousel.querySelectorAll(".carouselImage") : null;
    
        if (!carousel || !images || images.length === 0) {
          console.error("Carousel elements not found!");
          return;
        }
    
        let currentIndex = 0;
    
        function showImage(index) {
          images.forEach((image, i) => {
            image.style.opacity = i === index ? "1" : "0";
          });
        }
    
        function nextImage() {
          currentIndex = (currentIndex + 1) % images.length;
          showImage(currentIndex);
        }
    
        // setInterval(nextImage, 3000);
      });
    </script>
